<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PrestamoApp.MainPage"
             BackgroundColor="White">

    <Grid RowDefinitions="8*,2*"
          ColumnDefinitions="*"
          BackgroundColor="White"
          Padding="20">

        <!-- Logo ocupa el 80% superior -->
        <Image Grid.Row="0"
               Source="credimax_logo.png"
               Aspect="AspectFit"
               HorizontalOptions="Center"
               VerticalOptions="Center"
               />

        <!-- Footer ocupa el 20% inferior -->
        <VerticalStackLayout Grid.Row="1"
                             Spacing="5"
                             VerticalOptions="End"
                             HorizontalOptions="Center">

            <Label Text="Soluciones financieras a tu medida"
                   FontSize="16"
                   TextColor="Black"
                   HorizontalTextAlignment="Center"
                   Opacity="0.8" />

            <ActivityIndicator Color="#f39c12"
                               IsRunning="True"
                               HeightRequest="40"
                               WidthRequest="40"
                               HorizontalOptions="Center" />

            <Label Text="Inicializando la aplicación..."
                   FontSize="14"
                   TextColor="#bdc3c7"
                   HorizontalTextAlignment="Center"
                   Margin="0,5,0,0"/>

            <Label Text="v1.0.0"
                   FontSize="12"
                   TextColor="#7f8c8d"
                   HorizontalTextAlignment="Center"
                   Margin="0,10,0,0"/>
        </VerticalStackLayout>

    </Grid>
</ContentPage>
