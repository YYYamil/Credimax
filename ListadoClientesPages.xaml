<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PrestamoApp.ListadoClientesPages"
             Title="Listado de Clientes">
    <ContentPage.Resources>
        <ResourceDictionary>
            <Color x:Key="PrimaryColor">#2196F3</Color>
            <Color x:Key="BackgroundColor">#FFFFFF</Color>
            <Color x:Key="TextColor">#212121</Color>
            <Color x:Key="SecondaryTextColor">#757575</Color>
            <Color x:Key="AccentColor">#FF5722</Color>
        </ResourceDictionary>
    </ContentPage.Resources>

    <StackLayout Padding="10">
        <Label Text="Clientes"
               FontSize="Large"
               TextColor="{StaticResource TextColor}"
               FontAttributes="Bold"
               HorizontalOptions="Center" />

        <Picker x:Name="zonaPicker"
                Title="Seleccionar Zona"
                SelectedIndexChanged="OnZonaSelected"
                Margin="0,10,0,10" />

        <SearchBar x:Name="searchBar"
                   Placeholder="Buscar por apellido..."
                   TextChanged="OnSearchTextChanged"
                   BackgroundColor="{StaticResource BackgroundColor}"
                   TextColor="{StaticResource TextColor}" />

        <ListView x:Name="clientesListView"
                  SelectionMode="Single"
                  ItemSelected="OnClienteSelected"
                  HasUnevenRows="True">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Grid Padding="10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <Label Grid.Row="0"
                                   Grid.Column="0"
                                   Text="{Binding NombreCompleto}"
                                   FontSize="Medium"
                                   TextColor="{StaticResource TextColor}"
                                   FontAttributes="Bold" />

                            <Label Grid.Row="1"
                                   Grid.Column="0"
                                   Text="{Binding Direccion}"
                                   FontSize="Small"
                                   TextColor="{StaticResource SecondaryTextColor}" />

                            <Label Grid.Row="0"
                                   Grid.Column="1"
                                   Text="{Binding Celular}"
                                   FontSize="Small"
                                   TextColor="{StaticResource SecondaryTextColor}" />

                            <Label Grid.Row="1"
                                   Grid.Column="1"
                                   Text="{Binding Zona}"
                                   FontSize="Small"
                                   TextColor="{StaticResource AccentColor}" />
                        </Grid>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        
    </StackLayout>
</ContentPage>
